@model BRTF_Booking.Models.Booking

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Booking</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="BookingID" asp-for="ID" />
            <div class="form-group">
                <label asp-for="User" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Area:</label>
                <select asp-for="Room.AreaID" id="AreaID" name="AreaID" class="form-control" asp-items="ViewBag.AreaID">
                    <option value="">Select an area:</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Room" class="control-label"></label>
                <select asp-for="RoomID" id="RoomID" name="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
                <span asp-validation-for="RoomID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BookingRequested" class="control-label"></label>
                <input asp-for="BookingRequested" class="form-control" />
                <span asp-validation-for="BookingRequested" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select id="Status" name="Status" class="form-control">
                    <option style="color: #E2C044;" value="Awaiting">Awaiting</option>
                    <option style="color: #D52941;" value="Declined">Declined</option>
                    <option style="color: #44CF6C;" value="Accepted">Accepted</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/refreshDDL.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var selectedBooking = $("#BookingID").val();
            var URL = "/Bookings/GetEditRooms/" + selectedBooking;
            refreshDDL('RoomID', URL, true);
        });

        $('#AreaID').change(function () {
            var selectedArea = $("#AreaID").val();
            var URL = "/Bookings/GetCreateRooms/" + selectedArea;
            refreshDDL('RoomID', URL, true);
        });
    </script>
}