@model IEnumerable<BRTF_Booking.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Bookings</h1>

<p>
    <a class="btn btn-primary" style=" background: #097dea; background: linear-gradient(65deg, #0270D7 0, #0F8AFD 100%); color: #fff !important; border: none; border-radius: 2px; " asp-action="Create">New Booking</a>
    @if (User.IsInRole("Top-Level Admin") || User.IsInRole("Admin"))
    {
        <a asp-action="DownloadBookings" class="btn btn-info float-right" style=" background: #097dea; background: linear-gradient(65deg, #0270D7 0, #0F8AFD 100%); color: #fff !important; border: none; border-radius: 2px; ">Download Booking Report</a>
    }
</p>
<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <div class="form-horizontal">
        <button class="btn @(ViewData["Filtering"])" type="button" data-toggle="collapse" id="filterToggle" data-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
            Filter/Search
        </button>
        <div class="collapse" id="collapseFilter">
            <div class="card card-body bg-light">
                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="control-label">Search Student:</label>
                        @Html.TextBox("SearchName", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Search By Date:</label>
                        <input type="date" id="SearchDate" name="SearchDate" class="form-control" />
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Search Start Time:</label>
                        <input type="time" id="SearchStartTime" name="SearchStartTime" class="form-control" />
                    </div>
                    <div class="form-group col-md-4 align-self-end">
                        <input type="submit" name="actionButton" value="Filter" class="btn btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <input type="submit" name="actionButton" value="User" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Room" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Date Requested" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Start" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="End" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Status" class="btn btn-link" />
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingRequested)
                    </td>
                    <td>
                        @Convert.ToString(string.Format("{0:hh:mm tt}", item.StartDate))
                        @*@Html.DisplayFor(modelItem => item.StartDate)*@
                    </td>
                    <td>
                        @Convert.ToString(string.Format("{0:hh:mm tt}", item.EndDate))
                        @*@Html.DisplayFor(modelItem => item.EndDate)*@
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.Status)
                    </th>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Cancel</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
    <partial name="_PagingNavBar" />
</form>

