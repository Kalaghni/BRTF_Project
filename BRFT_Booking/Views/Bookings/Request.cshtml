@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.16.0/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.0.1/fullcalendar.min.js"></script>

    <script src="~/js/refreshDDL.js"></script>
    
    <script type="text/javascript">

        var limit;
        var calendarLoaded = false;
        var start;
        var end;
        var termEnd = "";
        var termStart = "";
        var firstDay = "@ViewBag.DateClicked";

        console.log(firstDay);

        $('#AreaID').change(function () {
            if (!calendarLoaded) {
                $.getJSON("/Bookings/GetSettings", function (data) {
                    start = data.officeStartHours;
                    end = data.officeEndHours;
                    termStart = data.termStart;
                    termEnd = data.termEnd;
                    $('#officeHours').text("Booking is only available Mon-Friday between " + data.officeStartHours + " to " + data.officeEndHours);
                    $('#termDates').text("Current term is " + data.termStart + " to " + data.termEnd);
                }).success(
                    $('#calendar').fullCalendar({
                        header: {
                            left: 'prev,next today',
                            center: 'title'
                        },
                        defaultView: 'agendaWeek',
                        allDayText: "Term",
                        firstDay: 0,
                        defaultDate: firstDay,
                        slotMinutes: 60,
                        selectable: true,
                        selectOverlap: function (stillEvent, movingEvent) {
                            return stillEvent.rendering == "inverse-background";
                        },
                        businessHours: {
                            dow: [1, 2, 3, 4, 5],
                            start: start,
                            end: end
                        },
                        selectConstraint: {
                            dow: [1, 2, 3, 4, 5],
                            start: start,
                            end: end
                        },
                        selectAllow: function (selectInfo) {
                            var duration = moment.duration(selectInfo.end.diff(selectInfo.start));
                            var offStartMins = parseInt(start.slice(0, 2)) * 60 + parseInt(start.slice(3, 5));
                            var offEndMins = parseInt(end.slice(0, 2)) * 60 + parseInt(end.slice(3, 5));
                            var selStartMins = (new Date(selectInfo.start).getHours() + 4) * 60 + new Date(selectInfo.start).getMinutes() - 30;
                            var selEndMins = (new Date(selectInfo.end).getHours() + 4) * 60 + new Date(selectInfo.end).getMinutes() - 30;
                            $("#hours-counter").text("Hours Selected: " + duration.asHours());
                            if (selectInfo.start < Date.now()) {
                                $("#hours-counter").text("");
                                $("#error-msg").text("Selection cannot be in the past");
                                return false;
                            }
                            else if (duration.asMinutes() > limit * 60) {
                                $("#hours-counter").text("");
                                $("#error-msg").text("Selection must be less than " + limit + " hours");
                                return false;
                            }
                            else if (selectInfo.start < Date.parse(termStart) | selectInfo.end < Date.parse(termStart) | selectInfo.end > Date.parse(termEnd) | selectInfo.start > Date.parse(termEnd)) {
                                $("#hours-counter").text("");
                                $("#error-msg").text("Selection must be within the current term");
                                return false;
                            }
                            else if (selStartMins < offStartMins | selEndMins < offStartMins | selStartMins > offEndMins | selEndMins > offEndMins) {
                                $("#hours-counter").text("");
                                $("#error-msg").text("Selection must be within office hours");
                                return false;
                            }
                            else if (new Date(selectInfo.start).getDay() == 0 | new Date(selectInfo.start).getDay() == 6 | new Date(selectInfo.end).getDay() == 0 | new Date(selectInfo.end).getDay() == 6) {
                                console.log(new Date(selectInfo.start).getDay());
                                $("#hours-counter").text("");
                                $("#error-msg").text("Selection cannot be on weekends");
                                return false;
                            }

                            $("#error-msg").text("");
                        },
                        select: function (startDate, endDate) {
                            $('#StartDate').val(startDate.format());
                            $('#EndDate').val(endDate.format());
                        },
                        selectHelper: true,
                        unselectAuto: false
                    }));
                    
                    
                calendarLoaded = true;
            }
            $('#calendar').fullCalendar('unselect');
            $('#hours-counter').text("");
            $('#error-msg').text("");
            var selectedArea = $("#AreaID").val();
            var URL = "/Bookings/GetCreateRooms/" + selectedArea;
            refreshDDL('RoomID', URL, true);
            $.getJSON(URL, function (data) {
                var selectedRoom = data[0].value;
                $.getJSON("/Rooms/GetRoomRules?roomID=" + selectedRoom, function (data) {
                    if (data.limit != null) {
                        $('#roomTitle').text("Click and Drag to select an available time block up to " + data.limit + " hours");
                        $('#limit').val(data.limit);
                        limit = data.limit
                    }
                    else {
                        $('#roomTitle').text("Click and Drag to select an available time block");
                    }
                });

                var URL2 = "/Bookings/GetRoomEvents?roomID=" + selectedRoom;
                $.getJSON(URL2, function (data) {
                    $('#calendar').fullCalendar('removeEvents');
                    $('#calendar').fullCalendar('addEventSource', data);
                    $('#calendar').fullCalendar('addEventSource', [
                        {
                            start: termStart,
                            end: termEnd,
                            rendering: 'inverse-background',
                            backgroundColor: 'red'
                        }
                    ]);
                })
            });
        });
        $('#RoomID').change(function () {
            var selectedRoom = $('#RoomID').val();
            var URL2 = "/Bookings/GetRoomEvents?roomID=" + selectedRoom;
            $.getJSON(URL2, function (data) {
                $('#calendar').fullCalendar('removeEvents');
                $('#calendar').fullCalendar('addEventSource', data);
                
            });
            $('#calendar').fullCalendar('unselect');
            $('#hours-counter').text("");
            $('#error-msg').text("");
        });


        document.addEventListener('DOMContentLoaded', () => {
            let rooms = document.getElementById('RoomID');
            if (rooms.value != "") {
                    $("#AreaID").trigger("change");
                    $("#RoomID").trigger("change");
            }
        });
    </script>

