@model BRTF_Booking.Models.ProgramTerm

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-primary:hover {
        background-color: #21db21;
        border-color: #1dc41d;
    }
</style>

<h1>Create ProgramTerm</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User" class="control-label"></label>
                <select asp-for="UserID" class="form-control" data-toggle="tooltip" title="Choose User" asp-items="ViewBag.UserID"></select>
            </div>
            <div class="form-group">
                <label asp-for="AcadPlan" class="control-label"></label>
                <select asp-for="AcadPlan" class="form-control" data-toggle="tooltip" title="Choose Your Academic Plan" asp-items="ViewBag.AcadPlan"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProgramDetail" class="control-label"></label>
                <select asp-for="ProgramDetailID" class="form-control" data-toggle="tooltip" title="Select Program" asp-items="ViewBag.ProgramDetailID"></select>
            </div>
            <div class="form-group">
                <label asp-for="StrtLevel" class="control-label"></label>
                <input asp-for="StrtLevel" data-toggle="tooltip" title="Select Starting Level" class="form-control" />
                <span asp-validation-for="StrtLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastLevel" class="control-label"></label>
                <input asp-for="LastLevel" data-toggle="tooltip" title="Is this the Last Level (Y = Yes, N = No)" class="form-control" />
                <span asp-validation-for="LastLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term" class="control-label"></label>
                <input asp-for="Term" data-toggle="tooltip" title="Select Term" class="form-control" />
                <span asp-validation-for="Term" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='@ViewData["returnURL"]'>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });</script>